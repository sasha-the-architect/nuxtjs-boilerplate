// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model AnalyticsEvent {
  id         String   @id @default(cuid())
  type       String
  resourceId String?
  category   String?
  url        String?
  userAgent  String?
  ip         String
  timestamp  Int
  properties String?

  @@index([timestamp])
  @@index([resourceId])
  @@index([type])
  @@index([ip])
  @@index([timestamp, type])
  @@index([timestamp, resourceId])
  @@index([resourceId, type])
}